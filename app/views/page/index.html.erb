<h1>index</h1>
<% if user_signed_in? %>
	<table>
		<tr>
			<th>Your questions</th><br><br>
		</tr>
		<% for e in current_user.questions %>
			<tr>
				<td>
					Q: <%= e.question %>
					<%= link_to "Edit", edit_question_path(e) %>
					<%= link_to "Delete", e, method: :delete %>
					<br>Type: <%= e.result_type %> 
					<% for a in e.answers %>
						<br>R: <%= a.answer %>
					<% end %><br><br>
				</td>
			</tr>
		<% end %>
	</table>
	<br>
	<%= render 'questions/form' %>
<% else %>
<%= link_to "Sign up now!", new_user_registration_path, class: "btn btn-large btn-primary" %>
<% end %>
